<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.TextFlow?>
<?import model.Livre?>

<AnchorPane fx:id="anchorPaneRoot" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LivreWindowController">
    <children>
        <SplitPane fx:id="splitpane" dividerPositions="0.25" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane fx:id="anchorPaneFirst">
                    <children>
                        <TableView fx:id="recettesTable" layoutX="-12.0" layoutY="49.0" prefHeight="298.0" prefWidth="120.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="nomColumn" prefWidth="145.0" text="Nom" resizable="true"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="anchorPaneSecond">
                    <children>
                        <GridPane fx:id="gridPane" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" vgap="5" hgap="10">
                            <columnConstraints>
                                <ColumnConstraints fx:id="column1" prefWidth="70" hgrow="NEVER"/>
                                <ColumnConstraints fx:id="column2" prefWidth="140" hgrow="NEVER"/>
                                <ColumnConstraints fx:id="column3" prefWidth="220" hgrow="NEVER"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints prefHeight="150.0" vgrow="ALWAYS" />
                            </rowConstraints>
                            <children>
                                <Label text="Nom : " />
                                <Label text="Duree : " GridPane.rowIndex="1" />
                                <Label text="Difficulte : " GridPane.rowIndex="2" />
                                <Label text="Budget : " GridPane.rowIndex="3" />
                                <Label text="Ingredients : " GridPane.columnIndex="2"/>
                                <ListView fx:id="ingredientsLabel" GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.rowSpan="4"/>
                                <Label text="Recette : " GridPane.rowIndex="4" />
                                <ScrollPane fx:id="recetteScrollPane" GridPane.rowIndex="5" GridPane.columnSpan="3" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
                                    <Label fx:id="recetteLabel" text="label" wrapText="true" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
                                </ScrollPane>
                                <Label fx:id="nomLabel" text="Label" GridPane.columnIndex="1" />
                                <Label fx:id="dureeLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="difficulteLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="budgetLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                        <HBox fx:id="hBox" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                            <children>
                                <Label text="Gestion des recettes"/>
                                <ButtonBar>
                                    <buttons>
                                        <Button mnemonicParsing="false" text="Ajouter" onAction="#ajouterRecette"/>
                                        <Button mnemonicParsing="false" text="Modifier" onAction="#modifierRecette"/>
                                        <Button mnemonicParsing="false" text="Supprimer" onAction="#supprimerRecette"/>
                                    </buttons>
                                </ButtonBar>   
                            </children>                         
                        </HBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
